{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "AudioSyncMaster",
  "version": "1.0.0",
  "identifier": "com.audiosyncmaster.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:8081",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "AudioSyncMaster",
        "width": 1100,
        "height": 720,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' http://localhost:8081 tauri://localhost; style-src 'self' 'unsafe-inline'; img-src 'self' asset: https://asset.localhost;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "externalBin": [
      "bin/audiosync-cli"
    ],
    "resources": [
      "resources/ffmpeg"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
